<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.purp.mathree.view.MapFragment"
        android:label="MapFragment" >
        <action
            android:id="@+id/action_mapFragment_to_TQFragment"
            app:destination="@id/TQFragment" />
        <action
            android:id="@+id/action_mapFragment_to_battleListFragment"
            app:destination="@id/battleListFragment" />
    </fragment>
    <fragment
        android:id="@+id/TQFragment"
        android:name="com.purp.mathree.view.TQFragment"
        android:label="TQFragment" >
        <argument
            android:name="questType"
            app:argType="string" />
        <argument
            android:name="castleType"
            app:argType="string" />
        <action
            android:id="@+id/action_TQFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/battleListFragment"
        android:name="com.purp.mathree.view.BattleFragment"
        android:label="BattleListFragment" >
        <action
            android:id="@+id/action_battleListFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
</navigation>